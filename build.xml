<?xml version="1.0" encoding="UTF-8" standalone="no"?>    <project default="build" basedir=".">                <property file="build.properties" />            <target name="clean">          <delete dir="${build.dir}" failonerror="false" />          <delete dir="${war.dir}" failonerror="false" />          <mkdir dir="${build.dir}" />          <mkdir dir="${war.dir}" />        </target>                <target name="compile" depends="clean">          <javac includeAntRuntime="no"                 debug="true"                 srcdir="${java.src.dir}"                 destdir="${build.dir}"                  includes="**/*.java">            <classpath>              <fileset dir="${lib}">                <include name="**/*.jar"/>              </fileset>            </classpath>          </javac>        </target>                <target name="build" depends="compile">            <war basedir="${web.dir}"                excludes="**/lib/*"                destfile="${war.dir}/${war.name}"                 webxml="${web.dir}/WEB-INF/web.xml">                <classes dir="${build.dir}"/>                <lib dir="${lib}" includes="json-2.0.jar" />            </war>        </target>                <target name="deploy" depends="build">          <copy file="${war.dir}/${war.name}"             todir="${server.deploy.dir}"             overwrite="true"/>            </target>    </project>